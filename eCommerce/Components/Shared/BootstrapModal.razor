<div class="modal fade" id="ConfirmationModal" tabindex="-1" aria-labelledby="ConfirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="ConfirmationModalLabel">@Title</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <button type="button" class="btn btn-lg btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-lg @BootstrapButtonType" @onclick="()=>ConfirmationClicked(true)">@ButtonText</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public EventCallback<bool> OnModalConfirmation{ get; set; }

    [Parameter]
    public string Title { get; set; } = "Please Confirm";

    [Parameter]
    public string BootstrapButtonType { get; set; } = "btn-primary";

    [Parameter]
    public string ButtonText { get; set; } = "Confirm";
    private async Task ConfirmationClicked(bool value)
    {
        if(value)
        {
            await OnModalConfirmation.InvokeAsync(true);
        }
    }
}
